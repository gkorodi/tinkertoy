<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Information Form</title>
</head>
<body>
    <h1>Enter Your Information</h1>
    <form method="POST" action="/ui/submit">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br><br>

        <label for="cloud">Favorite Cloud Provider:</label>
        <select id="cloud" name="cloud" required>
            <option value="">Select one</option>
            <option value="AWS">AWS</option>
            <option value="Azure">Azure</option>
            <option value="GCP">Google Cloud Platform</option>
            <option value="Other">Other</option>
        </select><br><br>

        <div id="otherField" style="display:none;">
            <label for="otherCloud">Specify other cloud provider:</label>
            <input type="text" id="otherCloud" name="otherCloud"><br><br>
        </div>

        <input type="submit" value="Submit">
    </form>
    <script>
        document.getElementById('cloud').addEventListener('change', function() {
            var otherField = document.getElementById('otherField');
            if (this.value === 'Other') {
                otherField.style.display = 'block';
            } else {
                otherField.style.display = 'none';
            }
        });

        document.querySelector('form').addEventListener('submit', function(e) {
            var select = document.getElementById('cloud');
            if (select.value === 'Other') {
                var otherValue = document.getElementById('otherCloud').value.trim();
                if (otherValue) {
                    select.value = otherValue;
                } else {
                    alert('Please specify the other cloud provider.');
                    e.preventDefault();
                    return false;
                }
            }
        });
    </script>
</body>
</html>